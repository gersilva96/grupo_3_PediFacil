<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../partials/head", {title: "Modificar producto"}) %>
</head>

<body>
    <!-- HEADER -->
    <%- include("../partials/header", {user}) %>

    <section class="body-section">
        <div class="container">
            <h1 class="product-section_title"><i class="fas fa-user-cog"></i> Modificar producto</h1>
            <% if (typeof(errors) != "undefined") { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(errores => { %>
                            <li><%= errores.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
            <form class="admin-product" action="/products/<%= product.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Nombre:</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>" required>
                    <small class="form-text text-muted">
                        Al menos 10 caracteres, 99 como máximo
                    </small>
                </div>
                <div class="form-group">
                    <label for="category">Categoría:</label>
                    <input type="text" class="form-control" id="category" name="category" value="<%= product.category %>" required>
                </div>
                <div class="form-group">
                    <label for="price">Precio:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="number" id="price" name="price" class="form-control" value="<%= product.price %>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="discount">Descuento:</label>
                    <div class="input-group mb-3">
                        <input type="number" id="discount" name="discount" class="form-control" value="<%= product.discount %>" required>
                        <div class="input-group-append">
                            <span class="input-group-text">%</span>
                        </div>
                    </div>
                    <small class="form-text text-muted fix-form-text">
                        Mínimo 0, máximo 100
                    </small>
                </div>
                <div class="form-group">
                    <label for="stock">Stock:</label>
                    <input type="number" class="form-control" id="stock" name="stock" value="<%= product.stock %>" required>
                </div>
                <div class="form-group">
                    <label for="description">Descripción:</label>
                    <textarea class="form-control" id="description" name="description"
                        rows="3" required><%= product.description %></textarea>
                    <small class="form-text text-muted">
                        Mínimo 10 caracteres
                    </small>
                </div>
                <p class="text-danger">
                    Todos los campos son obligatorios
                </p>
                <div class="form-group">
                    <div class="admin-product_buttons">
                        <a href="/products"><button type="button" class="btn btn-link"><i
                                    class="fas fa-angle-left"></i> Volver</button></a>
                        <button type="reset" class="btn btn-outline-warning">Reiniciar</button>
                        <button type="submit" class="btn btn-success">Aceptar</button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <!-- FOOTER -->
    <%- include("../partials/footer") %>

    <!-- SCRIPTS -->
    <%- include("../partials/scripts") %>
</body>

</html>