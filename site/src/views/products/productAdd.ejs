<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../partials/head", {title: "Añadir producto"}) %>
</head>

<body>
    <!-- HEADER -->
    <%- include("../partials/header") %>

    <section class="body-section">
        <div class="container">
            <h1 class="product-section_title"><i class="fas fa-user-cog"></i> Agregar producto</h1>
            <% if (typeof(mensaje) != "undefined") { %>
                <div class="alert alert-danger" role="alert">
                    <p><%= mensaje %></p>
                </div>
            <% } %>
            <% if (typeof(errors) != "undefined") { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(errores => { %>
                            <li><%= errores.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <form class="admin-product" action="/products" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="id">Id:</label>
                    <input type="number" class="form-control" id="id" name="id" value="<%= newId %>" disabled required>
                </div>
                <div class="form-group">
                    <label for="name">Nombre:</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="category">Categoría:</label>
                    <input type="text" class="form-control" id="category" name="category" required>
                </div>
                <div class="form-group">
                    <label for="price">Precio:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="number" id="price" name="price" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="discount">Descuento:</label>
                    <div class="input-group mb-3">
                        <input type="number" id="discount" name="discount" class="form-control" required>
                        <div class="input-group-append">
                            <span class="input-group-text">%</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="stock">Stock:</label>
                    <input type="number" class="form-control" id="stock" name="stock" required>
                </div>
                <div class="form-group">
                    <label for="description">Descripción:</label>
                    <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                </div>
                <div class="form-group">
                    <label for="image">Imagen del producto:</label>
                    <input type="file" class="form-control-file" id="image" name="image" accept=".png, .jpg, .jpeg" required>
                </div>
                <div class="form-group">
                    <div class="admin-product_buttons">
                        <a href="/products"><button type="button" class="btn btn-link"><i class="fas fa-angle-left"></i>
                                Volver</button></a>
                        <button type="reset" class="btn btn-outline-warning">Reiniciar</button>
                        <button type="submit" class="btn btn-success">Aceptar</button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <!-- FOOTER -->
    <%- include("../partials/footer") %>

    <!-- SCRIPTS -->
    <%- include("../partials/scripts") %>
</body>

</html>