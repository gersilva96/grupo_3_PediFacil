<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../partials/head", {title: "Resultado de búsqueda"}) %>
</head>

<body>
    <!-- HEADER -->
    <%- include("../partials/header", {user}) %>

	<div class="body-section">
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Resultados de la búsqueda: <%= search %></h2>
				</div>
				<% results.forEach(product => { %>
					<% if (product.stock != 0) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products/detail/<%= product.id %>">
									<figure class="product-box_image">
										<img src="/images/products/<%= product.image %>" alt="imagen de producto">
									</figure>
									<article class="product-box_data">
										<h2>$<%= formatPrice(product.price,product.discount) %></h2>
										<span><% if (product.discount != 0) { %><%= product.discount %>% OFF<% } %></span>
										<p><%= product.name %></p>
									</article>
								</a>
							</section>
						</div>
					<% } %>
				<% }); %>
			</div>
			<% if (results.length == 0) {%> <p style="color: red; margin-top: 20px;">No se encontraron coincidencias</p> <% } %>
		</div>
	</div>

    <!-- FOOTER -->
    <%- include("../partials/footer") %>

    <!-- SCRIPTS -->
    <%- include("../partials/scripts") %>
</body>

</html>