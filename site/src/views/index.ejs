<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("partials/head", {title: "Inicio"}) %>
</head>

<body>
    <div id="sticky-footer">
        <!-- HEADER -->
        <%- include("partials/header", {user}) %>

        <div class="body-section" id="home">
            <!-- BANNER -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <a href="/products/all-products">
                            <img class="d-block h-100" src="/images/home/banner1.svg" alt="bar promo">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="/products/all-products">
                            <img class="d-block h-100" src="/images/home/banner2.svg" alt="restaurant promo">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="/products/all-products">
                            <img class="d-block h-100" src="/images/home/banner3.svg" alt="fruits promo">
                        </a>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                    data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                    data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <!-- PRODUCTS WRAPPER -->
            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">En oferta</h2>
                    </div>
                    <% products.forEach(product => { %>
                        <% if (product.stock != 0) { %>
                            <div class="col-12 col-sm-6 col-lg-4 col-xl-3 productbox">
                                <a href="/products/detail/<%= product.id %>">
                                    <div class="productbox_effect">
                                        <div class="card">
                                            <img src="/images/products/<%= product.image %>" class="card-img-top" alt="imagen de producto">
                                            <div class="card-body">
                                                <div class="productbox_price">
                                                    <h5 class="card-title"><%= formatPrice(product.price,product.discount) %></h5>
                                                    <span class="productbox_price_discount"><% if (product.discount != 0) { %><%= product.discount %>% OFF<% } %></span>
                                                </div>
                                                <p class="card-text"><%= product.name %></p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <% } %>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <%- include("partials/footer") %>

    <!-- SCRIPTS -->
    <%- include("partials/scripts") %>
</body>

</html>