<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../partials/head", {title: "Perfil de usuario"}) %>
</head>

<body>
    <div id="sticky-footer">
        <!-- HEADER -->
        <%- include("../partials/header", {user}) %>

        <section class="body-section">
            <div class="container">
                <div class="user">
                    <figure class="user_avatar">
                        <img src="/images/users/<%= user.image %>" alt="imagen de usuario">
                    </figure>
                    <div class="user_data">
                        <h1><%= user.first_name %> <%= user.last_name %></h1>
                        <h3><%= user.business_name %></h3>
                        <p><%= user.email %></p>
                        <div class="links">
                            <a href="/users/profile/edit"><button class="btn btn-info profile-link"><i class="fas fa-edit"></i> Editar datos</button></a>
                            <div class="links_user">
                                <% if (user.role_id == 1) { %>
                                    <a href="http://localhost:3000/" target="_blank"><button class="btn btn-success profile-link"><i class="fas fa-chart-line"></i> Dashboard</button></a>
                                <% } else if (user.role_id == 2) { %>
                                    <a href="/products"><button class="btn btn-success profile-link"><i class="fas fa-user-cog"></i> Administrar productos</button></a>
                                <% } else if (user.role_id == 3) { %>
                                    <a href="/users/purchase-history"><button class="btn btn-success profile-link"><i class="fas fa-history"></i> Historial de compras</button></a>
                                <% } %>
                            </div>
                            <form action="/users/logout" method="POST">
                                <button class="btn btn-danger" type="submit"><i class="fas fa-sign-out-alt"></i> Cerrar sesi√≥n</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- FOOTER -->
    <%- include("../partials/footer") %>

    <!-- SCRIPTS -->
    <%- include("../partials/scripts") %>
</body>

</html>