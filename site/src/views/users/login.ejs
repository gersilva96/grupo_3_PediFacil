<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../partials/head", {title: "Iniciar sesión"}) %>
</head>

<body>
    <!-- HEADER -->
    <%- include("../partials/header") %>

    <section class="body-section">
        <div class="container">
            <form class="admin-product" method="POST" action="/users/login">
                <div class="form-group">
                    <h1 class="form-title">Iniciá sesión</h1>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña:</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="form-group">
                    <div class="admin-product_buttons">
                        <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                    </div>
                </div>
                <div class="social">
                    <div class="form-group">
                        <a href="#" class="social-login facebook">
                            <i class="fab fa-facebook-f"></i>
                            <span>Iniciar con Facebook</span>
                        </a>
                    </div>
                    <div class="form-group">
                        <a href="#" class="social-login google">
                            <img src="/images/google_logo.svg" alt="google login">
                            <span>Iniciar con Google</span>
                        </a>
                    </div>
                </div>
            </form>
            <p class="form-foot">¿No tenés cuenta? <a href="/users/register"><b>Registrate acá</b></a></p>
        </div>
    </section>

    <!-- FOOTER -->
    <%- include("../partials/footer") %>

    <!-- SCRIPTS -->
    <%- include("../partials/scripts") %>
</body>

</html>