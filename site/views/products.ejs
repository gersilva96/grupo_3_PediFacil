<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("partials/head") %>
    <title>Todos los productos | Pedí Fácil</title>
</head>

<body>
    <!-- HEADER -->
    <%- include("partials/header") %>

    <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			<% products.forEach(product => { %>
				<% if (product.stock != 0) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/detail/<%= product.id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= product.image %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>$<%= formatPrice(product.price,product.discount) %></h2>
									<span><% if (product.discount != 0) { %><%= product.discount %>% OFF<% } %></span>
									<p><%= product.name %></p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			<% }); %>
		</div>
	</div>

    <!-- FOOTER -->
    <%- include("partials/footer") %>
</body>

</html>